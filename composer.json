        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0",
        "rcalicdan/blade": "^1.0",
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "php-di/slim-bridge": "^3.4",
        "illuminate/support": "^10.48",
        "illuminate/database": "^10.38",
        "vlucas/phpdotenv": "^5.6"

    },
    "autoload": {
